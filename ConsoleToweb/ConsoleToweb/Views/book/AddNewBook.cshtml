@{
    ViewData["Title"] = "AddNewBook";
}

@model BookModel

<div class="container">
    <h1 class="display-4">Add New Book</h1>
    <hr />
    @if (ViewBag.IsSuccces == true)
    {
        <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> You are Sucessfully added a new Book.<br />
            click <a asp-controller="book" asp-action="getBookbyId" asp-route-id="@ViewBag.BookID">Here</a>To view the result
        </div>
    }


<form method="post" asp-action="AddNewBook" asp-controller="book">
    <div asp-validation-summary="None" class="text-danger"></div>

    <div class="form-group">
        <lable asp-for="MyFeild" class="control-label">MyFeild<span>*</span></lable>
        <input asp-for="MyFeild" class="form-control" />
        <span asp-validation-for="MyFeild" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable asp-for="Title" class="control-label">Title<span>*</span></lable>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable>Author*</lable>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable asp-for="TotalPages" class="control-label">TotalPages*</lable>
        <input asp-for="TotalPages" class="form-control" />
        <span asp-validation-for="TotalPages" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable>Description*</lable>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable asp-for="Laungage" class="control-label">Laungage</lable>
        <select asp-for="Laungage" class="=form-control" asp-items="ViewBag.Launagage" required>
           <option value="">Please select your Laungage</option>
        </select>
        <span asp-validation-for="Laungage" class="text-danger"></span>

    </div>

    <div class="form-group">
        <input type="submit" value="add Book" class="btn btn-primary" />

    </div>

</form>
</div>

        

