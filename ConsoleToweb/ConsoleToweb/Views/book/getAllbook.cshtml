<div class="text-md-center">
    <h1>Get All Books</h1>
</div>
<div class="container">
    <h3> All Books</h3>
    <div class="row">
        @foreach (var b in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Placeholder</title>
                        <rect width="100%"
                              height="100%" fill="#55595c" />
                        <text x="50%" y="50%" fill="#eceeef" dy=".3em">@b.Title</text>
                    </svg>
                    <div class="card-body">
                        <h3 class="card-title">@b.Title</h3>
                        <p class="card-text">@b.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getBookbyId" asp-route-id="@b.Id" class="btn-btn-outline-secondry">View details</a>
                            </div>
                            <small class="text-muted">@b.Author</small>

                        </div>
                    </div>
                </div>
            </div>
         }
    </div>
</div>
